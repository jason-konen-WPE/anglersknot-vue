<style>
  .page-header {
    background-color: #0066cc;
    color: white;
    padding: 4rem 1rem;
    text-align: center;
    margin-bottom: 2rem;
    border-bottom: 4px solid #000;
  }
  
  .page-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    text-shadow: 3px 3px 0 #000;
  }
  
  .page-subtitle {
    font-size: 1.2rem;
    max-width: 600px;
    margin: 0 auto;
    text-shadow: 2px 2px 0 #000;
  }
  
  .page-content {
    max-width: 1000px;
    margin: 0 auto;
    padding: 1rem;
  }
  
  .intro-section {
    margin-bottom: 3rem;
    line-height: 1.6;
  }
  
  .intro-section p {
    margin-bottom: 1rem;
  }
  
  .section-title {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    color: #0066cc;
    text-align: center;
    text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.1);
  }
  
  .games-section {
    margin-bottom: 3rem;
  }
  
  .games-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .game-card {
    background-color: white;
    border: 4px solid #000;
    overflow: hidden;
    box-shadow: 8px 8px 0 rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
  }
  
  .game-card:hover {
    transform: translateY(-5px);
  }
  
  .game-image {
    height: 180px;
    overflow: hidden;
    border-bottom: 4px solid #000;
  }
  
  .pixelated-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    image-rendering: pixelated;
  }
  
  .game-content {
    padding: 1.5rem;
  }
  
  .game-title {
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
    color: #0066cc;
  }
  
  .game-desc {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    line-height: 1.5;
  }
  
  .game-meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.8rem;
    color: #666;
  }
  
  .retro-section {
    margin-bottom: 3rem;
    background-color: #f0f8ff;
    border: 4px solid #000;
    padding: 2rem;
    box-shadow: 8px 8px 0 rgba(0, 0, 0, 0.1);
  }
  
  .retro-content {
    line-height: 1.6;
  }
  
  .retro-list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
  }
  
  .retro-item {
    margin-bottom: 1rem;
    padding: 0.75rem;
    background-color: white;
    border: 2px solid #0066cc;
  }
  
  .blog-section {
    margin-bottom: 3rem;
  }
  
  .blog-intro {
    margin-bottom: 1.5rem;
    text-align: center;
  }
  
  .blog-links {
    display: flex;
    justify-content: center;
  }
  
  .blog-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background-color: #0066cc;
    color: white;
    text-decoration: none;
    border: 3px solid #000;
    font-weight: bold;
    transition: transform 0.2s;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
  }
  
  .blog-link:hover {
    transform: translateY(-3px);
  }
  
  .link-icon {
    font-size: 1.5rem;
  }
  
  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }
    
    .games-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
